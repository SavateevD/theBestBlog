@model theBestBlog.WebUI.Models.ListViewModel

<div id="content">

    <h3 class="text-muted">@ViewBag.Title</h3>
    <div class="row"style="height:14px"></div>
    @if (Model.Posts.Count > 0)
    {
        foreach (var post in Model.Posts)
        {
            @Html.Partial("_PostTemplate", post)
        }
    }
    else
    {
        <p>No posts found!</p>
    }

    @Html.Partial("_Pager", Model)

</div>