@model IList<theBestBlog.Domain.Objects.Tag>

<div class="card my-4">
    <h5 class="card-header text-center">Tags</h5>
    <div class="card-body">
        <div class="row">
            <div class="col text-center">
                @if (Model.Count > 0)
                {

                    foreach (var tag in Model)
                    {

                        <a href="#" class="badge badge-primary">@Html.TagLink(tag)</a>
                    }

                }
                else
                {
                    <p>No categories found!</p>
                }
                
            </div>
        </div>
    </div>
</div>